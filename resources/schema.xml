<database>
    <table name="openpear_changeset">
        <column name="revision" type="number" require="true" primary="true" />
        <column name="maintainer_id" type="number" />
        <column name="package_id" type="number" />
        <column name="changed" type="text" />
    </table>
    <table name="openpear_charge">
        <column name="package_id" type="number" require="true" />
        <column name="maintainer_id" type="number" require="true" />
        <column name="role" require="true" type="choice" />
    </table>
    <table name="openpear_favorite">
        <column name="package_id" type="number" require="true" />
        <column name="maintainer_id" type="number" require="true" />
    </table>
    <table name="openpear_maintainer">
        <column name="id" type="serial" />
        <column name="name" require="true" />
        <column name="mail" type="email" require="true" />
        <column name="fullname" length="100" />
        <column name="profile" type="text" />
        <column name="url" />
        <column name="location" length="100" />
        <column name="password" />
        <column name="svn_password" />
        <column name="created" type="timestamp" />
    </table>
    <table name="openpear_message">
        <column name="id" type="serial" />
        <column name="maintainer_to_id" type="number" require="true" />
        <column name="maintainer_from_id" type="number" />
        <column name="subject" require="true" />
        <column name="description" type="text" require="true" />
        <column name="unread" type="boolean" />
        <column name="type" type="choice" />
        <column name="created" type="timestamp" />
    </table>
    <table name="openpear_newproject_queue">
        <column name="id" type="serial" />
        <column name="package_id" type="number" require="true" />
        <column name="maintainer_id" type="number" require="true" />
        <column name="mail_possible" type="boolean" />
        <column name="settings" type="text" />
        <column name="trial_count" type="number" />
        <column name="created" type="timestamp" />
    </table>
    <table name="openpear_openid_maintainer">
        <column name="maintainer_id" type="number" require="true" />
        <column name="url" require="true" />
    </table>
    <table name="openpear_package">
        <column name="id" type="serial" />
        <column name="name" require="true" />
        <column name="description" require="true" />
        <column name="url" />
        <column name="public_level" type="number" />
        <column name="external_repository" />
        <column name="external_repository_type" type="choice" />
        <column name="favored_count" type="number" />
        <column name="recent_changeset" type="number" />
        <column name="released_at" type="timestamp" />
        <column name="latest_release_id" type="number" />
        <column name="author_id" type="number" />
        <column name="license" type="choice" />
        <column name="license_uri" />
        <column name="notify" />
        <column name="created" type="timestamp" />
        <column name="updated" type="timestamp" />
    </table>
    <table name="openpear_package_message">
        <column name="id" type="serial" />
        <column name="package_id" type="number" require="true" />
        <column name="description" require="true" />
        <column name="unread" type="boolean" />
        <column name="type" type="choice" />
        <column name="created" type="timestamp" />
    </table>
    <table name="openpear_package_tag">
        <column name="package_id" type="number" require="true" />
        <column name="tag_id" type="number" require="true" />
        <column name="prime" type="boolean" />
    </table>
    <table name="openpear_release">
        <column name="id" type="serial" />
        <column name="package_id" type="number" require="true" />
        <column name="maintainer_id" type="number" require="true" />
        <column name="version" length="30" />
        <column name="version_stab" type="choice" />
        <column name="notes" type="text" />
        <column name="settings" type="text" />
        <column name="created" type="timestamp" />
    </table>
    <table name="openpear_tag">
        <column name="id" type="serial" />
        <column name="name" require="true" />
        <column name="prime" type="boolean" />
        <column name="package_count" type="number" />
    </table>
    <table name="openpear_timeline">
        <column name="id" type="serial" />
        <column name="subject" require="true" />
        <column name="description" type="text" require="true" />
        <column name="type" type="choice" />
        <column name="package_id" type="number" />
        <column name="maintainer_id" type="number" />
        <column name="created" type="timestamp" />
    </table>
</database>
